@model Trash_Collector_Application.Models.CustomerViewModel

@{
    ViewData["Title"] = "AccountDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Account Details</h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FirstName) @Html.DisplayFor(model => model.Customer.LastName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.StreetAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.StreetAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.ZipCode)
        </dd>
    </dl>
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.DayOfService)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.DayOfService)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.NextServiceDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.NextServiceDay)
        </dd>
        @if (Model.Service.IsOnHold)
        {
            <dd class="col-sm-10">
                Your services are on hold
            </dd>
        }
        @if (Model.Service.OneTimeService != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Service.OneTimeService)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.OneTimeService)
            </dd>
        }
        @if (Model.Service.StartServiceHold != null && Model.Service.EndServiceHold != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Service.StartServiceHold)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.StartServiceHold)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Service.EndServiceHold)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Service.EndServiceHold)
            </dd>
        }
    </dl>
    <h4></h4>
</div>
<div>
    <a asp-action="EditService">Edit Services</a> |
    <a asp-action="Index">Back to Dashboard</a>
</div>
